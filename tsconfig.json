{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "~app": ["./app"],
      "~app/*": ["./app/*"],

      "~pages": ["./pages"],
      "~pages/*": ["./pages/*"],

      "~widgets": ["./widgets"],
      "~widgets/*": ["./widgets/*"],

      "~features": ["./features"],
      "~features/*": ["./features/*"],

      "~entities": ["./entities"],
      "~entities/*": ["./entities/*"],

      "~shared": ["./shared"],
      "~shared/*": ["./shared/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
